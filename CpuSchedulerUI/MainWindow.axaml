<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CpuSchedulerUI.MainWindow"
        Title="Cross-Platform CPU Scheduler"
        Width="600" Height="500">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Number of Processes:" />
        <TextBox x:Name="ProcessInput" Width="100" Text="5"/>
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="Run SRTF" Click="OnRunSRTF"/>
            <Button Content="Run MLFQ" Click="OnRunMLFQ"/>
        </StackPanel>
        <TextBlock Text="Results:" Margin="0,10,0,0"/>
        <TextBox x:Name="ResultOutput" AcceptsReturn="True" Height="300" FontFamily="Consolas"/>
    </StackPanel>
</Window>